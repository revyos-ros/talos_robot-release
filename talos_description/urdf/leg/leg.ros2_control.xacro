<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="ros2_control_leg" params="side number leg_reduction:=1.0 flexibility:=false" >
    <joint name="leg_${side}_${number}_joint">
      <command_interface name="position" />
      <command_interface name="velocity" />
      <command_interface name="effort" />

      <state_interface name="position" />
      <state_interface name="velocity" />
      <state_interface name="effort" />
    </joint>

   <!-- transmissions -->
   <xacro:include filename="$(find talos_description)/urdf/leg/leg.transmission.xacro" />
   <xacro:talos_leg_simple_transmission side="${side}" number="${number}" reduction="${leg_reduction}" />

    <xacro:if value="${flexibility}">
        <xacro:talos_leg_simple_transmission side="${side}" number="flex_1" reduction="${leg_reduction}" />
        <xacro:talos_leg_simple_transmission side="${side}" number="flex_2" reduction="${leg_reduction}" />
    </xacro:if>

  </xacro:macro>
</robot>

  
  
  


   

