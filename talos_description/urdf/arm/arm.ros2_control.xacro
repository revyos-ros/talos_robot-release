<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!--File includes-->
  <xacro:include filename="$(find talos_description)/urdf/arm/arm.transmission.xacro" />

  <xacro:macro name="ros2_control_arm" params="name side number joint_offset" >
    <joint name="${name}_${side}_${number}_joint">
      <command_interface name="position" />
      <command_interface name="velocity" />
      <command_interface name="effort" />

      <state_interface name="position" />
      <state_interface name="velocity" />
      <state_interface name="effort" />
    </joint>

   <!-- transmissions -->
  <xacro:talos_arm_simple_transmission name="${name}" side="${side}" number="${number}" reduction="1.0" offset_value="${joint_offset}"/>

  </xacro:macro>
</robot>
