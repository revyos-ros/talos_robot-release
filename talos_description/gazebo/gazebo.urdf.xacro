<robot name="talos" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find talos_description)/urdf/sensors/imu.gazebo.xacro" />
  <xacro:include filename="$(find talos_description)/urdf/sensors/ftsensor.gazebo.xacro" />

  <xacro:macro name="talos_gazebo">

    <gazebo>
      <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
        <ros>
          <argument>--ros-args</argument>
          <argument>--params-file</argument>
          <argument>$(find talos_description)/config/gazebo_controller_manager_cfg.yaml</argument>
        </ros>
        <hold_joints>false</hold_joints>
        <parameters>$(find talos_description)/config/gazebo_controller_manager_cfg.yaml</parameters>
        <xacro:if value="${is_multiple}">
          <!-- Do something about multirobot -->
        </xacro:if>
        <xacro:unless value="${is_multiple}">
          <!-- Do something about multirobot -->
        </xacro:unless>
      </plugin>
    </gazebo>

    <gazebo>
      <plugin name="gazebo_ros_ft" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <!-- Add namespace and remap the default topic -->
          <namespace>/talos</namespace>
          <remapping>wrench:=base_link_wrench</remapping>
        </ros>
        <!-- Replace camelCase elements with camel_case ones -->
        <body_name>base_link</body_name>
        <frame_name>link</frame_name>
        <update_rate>1000</update_rate>
        <gaussian_noise>0.01</gaussian_noise>
      </plugin>
    </gazebo>

    <gazebo>
      <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
        <always_on>true</always_on>
        <update_rate>50.0</update_rate>
        <body_name>base_link</body_name>
        <ros>
          <!-- Add namespace and remap the default topic -->
          <namespace>/talos</namespace>
        </ros>
        <gaussian_noise>0.0</gaussian_noise>
        <frame_name>map</frame_name>
        <xyzOffsets>0 0 0</xyzOffsets>
        <rpyOffsets>0 0 0</rpyOffsets>
      </plugin>
    </gazebo>

    <xacro:imu_sensor_gazebo update_rate="1000.0"/>
    <xacro:force_torque_sensor_gazebo parent_joint_name="wrist_left_ft_joint" sensor_name="wrist_left_ft_sensor" update_rate="1000.0"/>
    <xacro:force_torque_sensor_gazebo parent_joint_name="wrist_right_ft_joint" sensor_name="wrist_right_ft_sensor" update_rate="1000.0"/>
    <xacro:force_torque_sensor_gazebo parent_joint_name="leg_left_6_joint" sensor_name="ankle_left_ft_sensor" update_rate="1000.0"/>
    <xacro:force_torque_sensor_gazebo parent_joint_name="leg_right_6_joint" sensor_name="ankle_right_ft_sensor" update_rate="1000.0"/>

  </xacro:macro>

</robot>

